generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario{
  id String @id @default(uuid())
  nome String
  email String
  senha String
  cpf String
  rg String?
  cargo String?

  data_criacao DateTime? @default(now())
  data_alteracao DateTime? @default(now())

  propostas Proposta[]

  @@map("usuarios")

}


model Cliente{
  id String @id @default(uuid())
  razao_social String
  nome_fantasia String
  cnpj String
  email String
  endereco String
  telefone String
  site String?


  data_criacao DateTime? @default(now())
  data_alteracao DateTime? @default(now())

  propostas Proposta[]

  @@map("clientes")

}

model Produto{
  id String @id @default(uuid())
  codigo_produto Decimal
  descricao String
  valor_unitario Float

  propostas Proposta[]

  @@map("produtos")
}

model Proposta{
  id String @id @default(uuid())
  nro_proposta String
  data_proposta DateTime @default(now())
  quantidade String
  valor_total String
  prazo_pgto String
  descricao String?

  clientes Cliente @relation(fields: [id_cliente], references: [id])
  produtos Produto @relation(fields: [id_produto], references: [id])
  usuario Usuario @relation(fields: [id_usuario], references: [id])

  @@map("propostas")
  id_cliente String
  id_produto String
  id_usuario String



}