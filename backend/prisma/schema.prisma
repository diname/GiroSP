// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario{
  id String @id @default(uuid())
  codigo_usuario Int @default(autoincrement())
  status Boolean @default(true)
  nome String
  email String
  senha String
  cpf String
  rg String?
  data_criacao DateTime? @default(now())
  data_alteracao DateTime? @default(now())

  @@map("usuarios")

}
model Vendedor{
  id String @id @default(uuid())
  codigo_vendedor Int @default(autoincrement())
  status Boolean @default(true)
  nome String
  email String
  senha String
  cpf String
  rg String?
  data_criacao DateTime? @default(now())
  data_alteracao DateTime? @default(now())

  @@map("vendedores")
  itens Item[]

}


model Cliente{
  id String @id @default(uuid())
  codigo_cliente Int @default(autoincrement())
  razao_social String
  nome_fantasia String
  cnpj String
  email String
  endereco String?
  telefone String?
  site String?
  data_criacao DateTime? @default(now())
  data_alteracao DateTime? @default(now())

  @@map("clientes")
  itens Item[]

}

model Produto{
  id String @id @default(uuid())
  codigo_produto Int @default(autoincrement())
  descricao String
  valor_unitario Float

  @@map("produtos")
  itens Item[]
}

model Item{
  id String @id @default(uuid())
  quantidade Int
  data_criacao DateTime? @default(now()) 
  data_atualizacao DateTime? @default(now())

//Relations
  produto Produto @relation(fields: [id_produto], references: [id])
  cliente Cliente @relation(fields: [id_cliente], references: [id])
  vendedor Vendedor @relation(fields: [id_vendedor], references: [id])
  proposta Proposta @relation(fields: [id_proposta], references: [id])

  @@map("items")
  id_produto String
  id_cliente String 
  id_vendedor String
  id_proposta String
}

model Proposta{
  id String @id @default(uuid())
  nro_proposta Int @default(autoincrement())
  status Boolean @default(true)
  valor_total Float
  prazo_pgto Int
  descricao String?
  data_atualizacao DateTime @default(now())
  data_criacao DateTime @default(now())
  
  @@map("propostas")
  itens Item[]
}