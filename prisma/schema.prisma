// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id     String  @id @default(uuid())
  status Boolean @default(true)
  nome   String
  email  String
  senha  String
  cpf    String
  rg     String?

  @@map("usuarios")
}

model Consultor {
  id     String  @id @default(uuid())
  status Boolean @default(true)
  nome   String
  email  String
  senha  String
  cpf    String
  rg     String?

  @@map("consultores")
}

model Cliente {
  id            String  @id @default(uuid())
  razao_social  String
  nome_fantasia String
  cnpj          String
  email         String
  endereco      String?
  telefone      String?
  site          String?

  @@map("clientes")
}

model Produto {
  id             String @id @default(uuid())
  descricao      String
  valor_unitario Float

  @@map("produtos")
}
